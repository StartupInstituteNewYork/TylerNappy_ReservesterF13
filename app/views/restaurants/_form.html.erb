<%= form_for @restaurant, :html => { :mulitpart => true } do |f| %>
  
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :image %>
      
 
  <%= f.file_field :image %>
  <%= f.hidden_field :image_cache %>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <%= f.label :city %>
  <%= f.text_field :city %>
  <%= f.label :state %>
  <%= f.text_field :state %>
  <%= f.label :phone %>
  <%= f.text_field :phone %>

  <dt><%= f.submit "Submit", :class => 'btn' %></dt>

<% end %>
